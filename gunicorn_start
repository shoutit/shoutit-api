#!/bin/bash 
NAME="shoutit_backend_prod"                                  # Name of the application
ENVDIR=/opt/myenv
DJANGODIR=$ENVDIR/shoutit/shoutit_backend_dev            # Django project directory
SOCKFILE=$ENVDIR/shoutit/run/shoutit_backend_dev.sock  # we will communicte using this unix socket
# USER=hello                                        # the user to run as
# GROUP=webapps                                     # the group to run as
NUM_WORKERS=1                                     # how many worker processes should Gunicorn spawn
DJANGO_SETTINGS_MODULE=settings             # which settings file should Django use
DJANGO_WSGI_MODULE=wsgi                     # WSGI module name
 
echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $DJANGODIR
source $ENVDIR/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH
 
# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR
 
# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec gunicorn ${DJANGO_WSGI_MODULE} \
  --name $NAME \
  --workers $NUM_WORKERS \
  --log-level warning \
  --log-file - \
  --bind 0.0.0.0:8001 \
  # --user=$USER --group=$GROUP \
  # --bind=unix:$SOCKFILE \
